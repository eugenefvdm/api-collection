{
    "name": "eugenefvdm/api-framework",
    "description": "APIs for various services with Laravel Facade access and lots of automated tests.",
    "license": "MIT",
    "keywords": [
        "api",
        "apis",
        "facade",
        "laravel",
        "php",
        "bulksms",
        "discord",
        "dns",
        "fail2ban",
        "hellopeter",
        "slack",
        "tail",
        "telegram",
        "whm-cpanel",
        "x-twitter",
        "zadomains"
    ],
    "authors": [
        {
            "name": "Eugene van der Merwe",
            "email": "hello@eugenefvdm.com",
            "homepage": "https://eugenefvdm.com",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/eugenefvdm/api",
    "require": {
        "php": "^8.1",
        "illuminate/support": "^8.12|^9.0|^10.0|^11.0|^12.0",
        "spatie/laravel-ray": "^1.40",
        "spatie/ssh": "^1.13"
    },
    "require-dev": {
        "guzzlehttp/guzzle": "^7.9",
        "larastan/larastan": "^3.2",
        "laravel/pint": "^1.0",
        "mockery/mockery": "^1.6",        
        "orchestra/testbench": "^6.23|^7.0|^8.0|^9.0|^10.0",
        "pestphp/pest": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Eugenefvdm\\Api\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Eugenefvdm\\Api\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Eugenefvdm\\Api\\ApiServiceProvider"
            ]
        }
    }
}
